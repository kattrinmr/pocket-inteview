<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_12"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp"
    android:layout_marginHorizontal="@dimen/spacing_12"
    android:layout_marginBottom="@dimen/spacing_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_collection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8"
            android:paddingVertical="@dimen/spacing_12"

            android:fontFamily="@font/rubik_regular"
            android:text="@string/txt_card_card_title"
            android:textColor="@color/black"
            android:textSize="@dimen/fonts_text"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>